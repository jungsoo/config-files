# zsh_aliases: user-defined aliases for zsh

# Better defaults
alias ls='ls -hG --color=auto'
alias grep='grep --color=auto'

# Listing directories
alias l.='ls -ld .*'
alias ll='ls -l'
alias la='ls -lA'
alias lh='ls -Aoh'
alias lt='ls -lAtr'

# Superuser privileges
alias slide='sudo -s'

#" vim: filetype=zsh
