set nocompatible
filetype indent plugin on
syntax on

" General Settings
colo evening
set wildmenu
set showcmd
set hlsearch

" Lines and Searching
set cursorline
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set confirm
set visualbell
set mouse=a
set number
set notimeout ttimeout ttimeoutlen=200

" Indentation
" Most terminals and github prefer size 8... usually
set shiftwidth=8
set tabstop=8

" Search Hilightning
map <SPACE> :noh<CR>
